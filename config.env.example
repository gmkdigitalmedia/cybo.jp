# Cytology Viewer Pro - Configuration
# Copy this file to /etc/cyto-viewer/config.env and customize

# Server Configuration
SERVER_PORT=8080
READ_TIMEOUT=30
WRITE_TIMEOUT=30
SHUTDOWN_TIMEOUT=10

# GPU Configuration
GPU_DEVICE_ID=0
GPU_CACHE_SIZE=8192
GPU_COLOR_CORRECTION=true
GPU_BATCH_SIZE=16

# Scanner Configuration
SCANNER_PROTOCOL=tcp
SCANNER_ADDRESS=192.168.1.100:9090
SCANNER_TIMEOUT=30

# Authentication Configuration
# Generate JWT secret: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET
TOKEN_EXPIRY=24

# Generate password hash using: make gen-password
PASSWORD_HASH=

# Storage Configuration
STORAGE_PATH=/data/slides
TEMP_PATH=/data/temp
MAX_SLIDE_SIZE=50
RETENTION_DAYS=365

# Logging
LOG_LEVEL=info
